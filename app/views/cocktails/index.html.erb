  <div class="banner-content mb-6">
    <h1>Mister Cocktails</h1>
    <p>Awesome beverages for developer's nightlife</p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
<div class="container mt-2">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <% if cocktail.photo.attached? %>
          <% background_url = cl_image_path cocktail.photo.key, width: 400, height: 500, crop: :fill %>
        <% else %>
          <% background_url = 'https://source.unsplash.com/500x400/?cocktail' %>
        <% end %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= background_url %>');">
          <div class="card-description">
            <h2 class="card-title p-4", style="color: white"><%= cocktail.name %></h2>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: 'card-link stretched-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
